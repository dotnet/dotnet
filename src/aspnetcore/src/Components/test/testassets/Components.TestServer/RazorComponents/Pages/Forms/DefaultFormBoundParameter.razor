@page "/forms/default-form-bound-parameter"
@using Microsoft.AspNetCore.Components.Forms

<h2>Default form with bound parameter</h2>

<EditForm Model="Parameter" method="POST" OnValidSubmit="() => _submitted = true" FormName="someform">
    <InputText @bind-Value="Parameter" />
    <input id="send" type="submit" value="Send" />
</EditForm>

@if (_submitted)
{
    <p id="pass">Hello @Parameter!</p>
}

@code {
    bool _submitted = false;

    [SupplyParameterFromForm] public string Parameter { get; set; } = "";
}
