@page "/forms/named-form-bound-parameter"
@using Microsoft.AspNetCore.Components.Forms

<h2>Named form with bound parameter</h2>

<EditForm FormName="named-form-handler" Model="Parameter" method="POST" OnValidSubmit="() => _submitted = true" >
    <InputText @bind-Value="Parameter" />
    <input id="send" type="submit" value="Send" />
</EditForm>

@if (_submitted)
{
    <p id="pass">Hello @Parameter!</p>
}

@code{
    bool _submitted = false;

    [SupplyParameterFromForm(Handler = "named-form-handler")] public string Parameter { get; set; } = "";
}
